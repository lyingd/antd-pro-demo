{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"jsx": "react",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"baseUrl": "./",
		"paths": {
			"@assets/*": [
				"src/assets/*"
			],
			"@common/*": [
				"src/common/*"
			],
			"@components/*": [
				"src/components/*"
			]
		}
	}
}