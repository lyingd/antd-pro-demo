{
	"compilerOptions": {
			"allowJs": true,
			"allowSyntheticDefaultImports": true,
			"target": "es6",
			"jsx": "react",
			"sourceMap": true,
			"emitDecoratorMetadata": true,
			"experimentalDecorators": true,
			"baseUrl": "./src",
			"paths": {
					"~/*" : ["*"],
					"jquery" : ["../node_modules/jquery/dist/jquery"]
			}
	},
	"exclude": [
			"node_modules"
	]
}